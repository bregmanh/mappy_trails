  <body>
    <%- include('partials/_header') %>
    <main>
      <h2 class="top-page">The Best Maps for <%=category.charAt(0).toUpperCase()+category.slice(1) %> </h2>
      <% for(let map of maps) { %>
        <ul>
          <form action="/maps/<%=map.id%>/" method="GET">
            <button id="map-name-button" type="submit" class="buttons"><%= map.name %></button>
          </form>
        </ul>
          <% } %>
    </main>

  </body>
